{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main",
    "release-0.12",
    "release-0.13"
  ],
  "updateNotScheduled": true,
  "ignorePaths": [
    "**/drift-cache/**"
  ],
  "ignoreDeps": [
    "rclone",
    "syncthing",
    "diskrsync"
  ],
  "dependencyDashboard": true,
  "dockerfile": {
    "fileMatch": [
      "Dockerfile.rhtap",
      "bundle.Dockerrfile.rhtap"
    ]
  },
  "git-submodules": {
    "schedule": [
      "at any time"
    ]
  }
}
