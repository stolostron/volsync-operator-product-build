{
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "updateNotScheduled": true,
  "ignorePaths": ["drift-cache/**"],
  "ignoreDeps": [
    "rclone",
    "syncthing",
    "diskrsync"
  ],
  "dependencyDashboard": true,
  "dockerfile": {
    "fileMatch": [
      "Dockerrfile.rhtap",
      "bundle.Dockerrfile.rhtap"
    ]
  },
  "git-submodules": {
    "schedule": ["at any time"]
  },
}
